<div class="page-header">
  <h1>Clients</h1>
</div>
<div class="action-panel">
  <%= link_to "New Client", new_client_path %>
</div>
<table class="table-borders wide-table">
  <% @clients.each do |client| %>
    <tr>
      <td>
        <%= link_to client do %>
          <div class="clients">
            <%= client.name %>
          </div>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
